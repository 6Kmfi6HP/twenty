{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    // Why should this have a different baseUrl ?
    "baseUrl": "../..",
    "paths": {
      "@ui/*": ["./packages/twenty-ui/src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "jest.config.ts",
    "setupTests.ts",
    "src/**/*.d.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.stories.tsx",
    "src/**/*.tsx",
    "src/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": []
}
